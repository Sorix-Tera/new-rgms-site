<main class="page" id="ncCompsPage">
  <header class="page-header">
    <h1 class="page-title">NC Comps</h1>
    <p class="page-subtitle">
      Browse best-performing comps aggregated across all players.
    </p>

    <div class="nc-tabs" role="tablist" aria-label="NC Comps views">
      <button
        class="nc-tab is-active"
        id="ncTabComps"
        type="button"
        role="tab"
        aria-selected="true"
        aria-controls="ncPanelComps"
        data-view="comps"
      >
        Comps
      </button>
      <button
        class="nc-tab"
        id="ncTabLeaderboard"
        type="button"
        role="tab"
        aria-selected="false"
        aria-controls="ncPanelLeaderboard"
        data-view="leaderboard"
      >
        Leaderboard
      </button>
    </div>
  </header>

  <div class="nc-panels">
    <!-- COMPS VIEW -->
    <section
      class="nc-panel is-active"
      id="ncPanelComps"
      role="tabpanel"
      aria-labelledby="ncTabComps"
      data-view="comps"
    >
      <!-- Round tabs -->
      <div class="nc-rounds" role="tablist" aria-label="Nightmare Corridor rounds">
        <button class="nc-round-tab is-active" type="button" role="tab" aria-selected="true" data-round="1">R1</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="2">R2</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="3">R3</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="4">R4</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="5">R5</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="6">R6</button>
      </div>

      <!-- Filters section (Comp Finder style container) -->
      <section class="filters nc-comps-filters" aria-label="NC comps filters">
        <div class="nc-filter-col nc-filter-col-force">
          <div class="nc-filter-title">Force Hero</div>

          <div class="nc-force-header" aria-hidden="true">
            <div class="nc-force-h">Hero</div>
            <div class="nc-force-h">SI</div>
            <div class="nc-force-h">Furn.</div>
          </div>

          <div class="nc-force-rows">
            {% for i in [1,2,3,4,5] %}
            <div class="nc-force-row">
              <input class="nc-input nc-force-hero" list="ncHeroList" type="text" placeholder="Hero" aria-label="Force hero {{ i }}"/>
              <select class="nc-select nc-force-si" aria-label="Force hero {{ i }} SI">
                <option value="" selected></option>
                <option value="40">40</option>
                <option value="30">30</option>
                <option value="<30">&lt;30</option>
              </select>
              <select class="nc-select nc-force-furn" aria-label="Force hero {{ i }} Furniture">
                <option value="" selected></option>
                <option value="0">0</option>
                <option value="3">3</option>
                <option value="9">9</option>
              </select>
            </div>
            {% endfor %}
          </div>
        </div>

        <div class="nc-filter-col nc-filter-col-blacklist">
          <div class="nc-filter-title">Blacklist Hero</div>

          <div class="nc-blacklist-rows">
            {% for i in [1,2,3,4,5] %}
            <input class="nc-input nc-blacklist-hero" list="ncHeroList" type="text" placeholder="Hero" aria-label="Blacklist hero {{ i }}"/>
            {% endfor %}
          </div>
        </div>
      </section>

      <datalist id="ncHeroList"></datalist>

      <div id="ncCompsStatus" class="nc-status" aria-live="polite"></div>
      <div id="ncCompsResults"></div>
    </section>

    <!-- LEADERBOARD VIEW -->
    <section
      class="nc-panel"
      id="ncPanelLeaderboard"
      role="tabpanel"
      aria-labelledby="ncTabLeaderboard"
      data-view="leaderboard"
      aria-hidden="true"
    >
      <!-- Split filters: left (hero/SI/Furn) + right (Round buttons) -->
      <section class="filters nc-leaderboard-filters" aria-label="NC leaderboard filters">
        <div class="nc-filter-col nc-filter-col-lb-left">
          <div class="nc-leaderboard-header" aria-hidden="true">
            <div class="nc-lh">Hero</div>
            <div class="nc-lh">SI</div>
            <div class="nc-lh">Furn.</div>
          </div>

          <div class="nc-leaderboard-rows">
            {% for i in [1,2,3,4,5] %}
            <div class="nc-leaderboard-row">
              <input class="nc-input nc-lb-hero" list="ncHeroList" type="text" placeholder="Hero" aria-label="Leaderboard hero {{ i }}"/>
              <select class="nc-select nc-lb-si" aria-label="Leaderboard hero {{ i }} SI">
                <option value="" selected></option>
                <option value="40">40</option>
                <option value="30">30</option>
                <option value="<30">&lt;30</option>
              </select>
              <select class="nc-select nc-lb-furn" aria-label="Leaderboard hero {{ i }} Furniture">
                <option value="" selected></option>
                <option value="0">0</option>
                <option value="3">3</option>
                <option value="9">9</option>
              </select>
            </div>
            {% endfor %}
          </div>
        </div>

        <div class="nc-filter-col nc-filter-col-lb-right">
          <div class="nc-filter-title">Round</div>
          <div class="nc-lb-rounds" role="tablist" aria-label="Leaderboard round">
            <button class="nc-lb-round-btn is-active" type="button" role="tab" aria-selected="true" data-round="1">R1</button>
            <button class="nc-lb-round-btn" type="button" role="tab" aria-selected="false" data-round="2">R2</button>
            <button class="nc-lb-round-btn" type="button" role="tab" aria-selected="false" data-round="3">R3</button>
            <button class="nc-lb-round-btn" type="button" role="tab" aria-selected="false" data-round="4">R4</button>
            <button class="nc-lb-round-btn" type="button" role="tab" aria-selected="false" data-round="5">R5</button>
            <button class="nc-lb-round-btn" type="button" role="tab" aria-selected="false" data-round="6">R6</button>
          </div>
        </div>
      </section>

      <div id="ncLbStatus" class="nc-status" aria-live="polite"></div>

      <div class="cr-table">
        <table id="ncLbTable">
          <thead>
            <tr>
              <th>Rank</th>
              <th>Region</th>
              <th>Name</th>
              <th>Comp</th>
              <th>Time</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </section>
  </div>
</main>
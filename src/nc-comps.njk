<main class="page" id="ncCompsPage">
  <header class="page-header">
    <h1 class="page-title">NC Comps</h1>
    <p class="page-subtitle">
      Browse best-performing comps aggregated across all players.
    </p>

    <div class="nc-tabs" role="tablist" aria-label="NC Comps views">
      <button
        class="nc-tab is-active"
        id="ncTabComps"
        type="button"
        role="tab"
        aria-selected="true"
        aria-controls="ncPanelComps"
        data-view="comps"
      >
        Comps
      </button>
      <button
        class="nc-tab"
        id="ncTabLeaderboard"
        type="button"
        role="tab"
        aria-selected="false"
        aria-controls="ncPanelLeaderboard"
        data-view="leaderboard"
      >
        Leaderboard
      </button>
    </div>
  </header>

  <div class="nc-panels">
    <!-- COMPS VIEW -->
    <section
      class="nc-panel is-active"
      id="ncPanelComps"
      role="tabpanel"
      aria-labelledby="ncTabComps"
      data-view="comps"
    >
      <!-- Round tabs -->
      <div class="nc-rounds" role="tablist" aria-label="Nightmare Corridor rounds">
        <button class="nc-round-tab is-active" type="button" role="tab" aria-selected="true" data-round="1">R1</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="2">R2</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="3">R3</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="4">R4</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="5">R5</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="6">R6</button>
      </div>

      <!-- Filters section (Comp Finder style container) -->
      <section class="filters nc-comps-filters" aria-label="NC comps filters">
        <div class="nc-filter-col nc-filter-col-force">
          <div class="nc-filter-title">Force Hero</div>

          <div class="nc-filter-header" aria-hidden="true">
            <div class="nc-filter-h">Hero</div>
            <div class="nc-filter-h">SI</div>
            <div class="nc-filter-h">Furn.</div>
          </div>

          <div class="nc-force-rows">
            {% for i in [1,2,3,4,5] %}
            <div class="nc-filter-row">
              <input class="nc-input" type="text" placeholder="Hero" aria-label="Force hero {{ i }}"/>
              <select class="nc-select" aria-label="Force hero {{ i }} SI">
                <option value="" selected></option>
                <option value="40">40</option>
                <option value="30">30</option>
                <option value="<30">&lt;30</option>
              </select>
              <select class="nc-select" aria-label="Force hero {{ i }} Furniture">
                <option value="" selected></option>
                <option value="0">0</option>
                <option value="3">3</option>
                <option value="9">9</option>
              </select>
            </div>
            {% endfor %}
          </div>
        </div>

        <div class="nc-filter-col nc-filter-col-blacklist">
          <div class="nc-filter-title">Blacklist Hero</div>

          <div class="nc-blacklist-rows">
            {% for i in [1,2,3,4,5] %}
            <input class="nc-input" type="text" placeholder="Hero" aria-label="Blacklist hero {{ i }}"/>
            {% endfor %}
          </div>
        </div>
      </section>

      <!-- Intentionally nothing else below filters for now -->
    </section>

    <!-- LEADERBOARD VIEW -->
    <section
      class="nc-panel"
      id="ncPanelLeaderboard"
      role="tabpanel"
      aria-labelledby="ncTabLeaderboard"
      data-view="leaderboard"
      aria-hidden="true"
    >
      <section class="filters nc-leaderboard-filters" aria-label="NC leaderboard filters">
        <div class="nc-filter-header" aria-hidden="true">
          <div class="nc-filter-h">Hero</div>
          <div class="nc-filter-h">SI</div>
          <div class="nc-filter-h">Furn.</div>
          <div class="nc-filter-h">Round</div>
        </div>

        <div class="nc-leaderboard-rows">
          {% for i in [1,2,3,4,5] %}
          <div class="nc-filter-row">
            <input class="nc-input" type="text" placeholder="Hero" aria-label="Leaderboard hero {{ i }}"/>
            <select class="nc-select" aria-label="Leaderboard hero {{ i }} SI">
              <option value="" selected></option>
              <option value="40">40</option>
              <option value="30">30</option>
              <option value="<30">&lt;30</option>
            </select>
            <select class="nc-select" aria-label="Leaderboard hero {{ i }} Furniture">
              <option value="" selected></option>
              <option value="0">0</option>
              <option value="3">3</option>
              <option value="9">9</option>
            </select>
            <select class="nc-select" aria-label="Leaderboard hero {{ i }} Round">
              <option value="R1">R1</option>
              <option value="R2">R2</option>
              <option value="R3">R3</option>
              <option value="R4">R4</option>
              <option value="R5">R5</option>
              <option value="R6">R6</option>
            </select>
          </div>
          {% endfor %}
        </div>
      </section>

      <!-- Intentionally nothing else below filters for now -->
    </section>
  </div>
</main>

<main class="page" id="ncCompsPage">
  <header class="page-header">
    <h1 class="page-title">NC Comps</h1>
    <p class="page-subtitle">
      Browse best-performing comps aggregated across all players.
    </p>

    <div class="nc-tabs" role="tablist" aria-label="NC Comps views">
      <button
        class="nc-tab is-active"
        id="ncTabComps"
        type="button"
        role="tab"
        aria-selected="true"
        aria-controls="ncPanelComps"
        data-view="comps"
      >
        Comps
      </button>
      <button
        class="nc-tab"
        id="ncTabLeaderboard"
        type="button"
        role="tab"
        aria-selected="false"
        aria-controls="ncPanelLeaderboard"
        data-view="leaderboard"
      >
        Leaderboard
      </button>
    </div>
  </header>

  <div class="nc-panels">
    <!-- COMPS VIEW -->
    <section
      class="nc-panel is-active"
      id="ncPanelComps"
      role="tabpanel"
      aria-labelledby="ncTabComps"
      data-view="comps"
    >
      <!-- Round tabs -->
      <div class="nc-rounds" role="tablist" aria-label="Nightmare Corridor rounds">
        <button class="nc-round-tab is-active" type="button" role="tab" aria-selected="true" data-round="1">R1</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="2">R2</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="3">R3</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="4">R4</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="5">R5</button>
        <button class="nc-round-tab" type="button" role="tab" aria-selected="false" data-round="6">R6</button>
      </div>

      <!-- Filters section -->
      <section class="filters nc-comps-filters" aria-label="NC comps filters">
        <div class="nc-filter-col nc-filter-col-force">
          <div class="nc-filter-title">Force Hero</div>

          <div class="nc-filter-header" aria-hidden="true">
            <div class="nc-filter-h">Hero</div>
            <div class="nc-filter-h">SI</div>
            <div class="nc-filter-h">Furn.</div>
          </div>

          <div class="nc-force-rows">
            {% for i in [1,2,3,4,5] %}
            <div class="nc-filter-row">
              <input class="nc-input nc-force-hero" type="text" placeholder="Hero" aria-label="Force hero {{ i }}" list="ncHeroList"/>
              <select class="nc-select nc-force-si" aria-label="Force hero {{ i }} SI">
                <option value="" selected></option>
                <option value="40">40</option>
                <option value="30">30</option>
                <option value="<30">&lt;30</option>
              </select>
              <select class="nc-select nc-force-furn" aria-label="Force hero {{ i }} Furniture">
                <option value="" selected></option>
                <option value="0">0</option>
                <option value="3">3</option>
                <option value="9">9</option>
              </select>
            </div>
            {% endfor %}
          </div>
        </div>

        <div class="nc-filter-col nc-filter-col-blacklist">
          <div class="nc-filter-title">Blacklist Hero</div>

          <div class="nc-blacklist-rows">
            {% for i in [1,2,3,4,5] %}
            <input class="nc-input nc-blacklist-hero" type="text" placeholder="Hero" aria-label="Blacklist hero {{ i }}" list="ncHeroList"/>
            {% endfor %}
          </div>
        </div>
      </section>

      <!-- Hero suggestions -->
      <datalist id="ncHeroList">
        <!-- filled by JS -->
      </datalist>

      <!-- Results -->
      <p class="page-status" id="ncCompsStatus"></p>

      <section id="ncCompsResults" class="nc-comps-results" aria-label="NC comps results">
        <!-- filled by JS -->
      </section>
    </section>

    <!-- LEADERBOARD VIEW -->
    <section
      class="nc-panel"
      id="ncPanelLeaderboard"
      role="tabpanel"
      aria-labelledby="ncTabLeaderboard"
      data-view="leaderboard"
      aria-hidden="true"
    >
      <section class="filters nc-leaderboard-filters" aria-label="NC leaderboard filters">
        <div class="nc-lb-topbar">
          <div class="nc-lb-title">Filter heroes</div>

          <div class="nc-lb-round">
            <div class="nc-lb-round-label">Round</div>
            <select class="nc-select" id="ncLbRound" aria-label="Leaderboard round">
              <option value="1" selected>R1</option>
              <option value="2">R2</option>
              <option value="3">R3</option>
              <option value="4">R4</option>
              <option value="5">R5</option>
              <option value="6">R6</option>
            </select>
          </div>
        </div>

        <div class="nc-lb-grid">
          <div class="nc-lb-header" aria-hidden="true">
            <div class="nc-lb-h">Hero</div>
            <div class="nc-lb-h">SI</div>
            <div class="nc-lb-h">Furn.</div>
          </div>

          <div class="nc-lb-rows">
            {% for i in [1,2,3,4,5] %}
            <div class="nc-lb-row">
              <input class="nc-input nc-lb-hero" type="text" placeholder="Hero" aria-label="Leaderboard hero {{ i }}" list="ncHeroList"/>
              <select class="nc-select nc-lb-si" aria-label="Leaderboard hero {{ i }} SI">
                <option value="" selected></option>
                <option value="40">40</option>
                <option value="30">30</option>
                <option value="<30">&lt;30</option>
              </select>
              <select class="nc-select nc-lb-furn" aria-label="Leaderboard hero {{ i }} Furniture">
                <option value="" selected></option>
                <option value="0">0</option>
                <option value="3">3</option>
                <option value="9">9</option>
              </select>
            </div>
            {% endfor %}
          </div>
        </div>
      </section>

      <p class="page-status" id="ncLbStatus"></p>

      <section style="margin-top: 0.9rem;">
        <table class="cr-table" id="ncLbTable">
          <thead>
            <tr>
              <th>Rank</th>
              <th>Region</th>
              <th>Name</th>
              <th>Comp</th>
              <th>Time</th>
            </tr>
          </thead>
          <tbody>
            <!-- filled by JS -->
          </tbody>
        </table>
      </section>
    </section>
  </div>
</main>

<header class="top-bar">
  <div class="top-bar-inner">
    <a href="index.html" class="brand" aria-label="Back to {{ site.name }} homepage">
      <div class="brand-logo"></div>
      <div>
        <div class="brand-text-main">{{ site.name }}</div>
        <div class="brand-text-sub">{{ site.subtitle }}</div>
      </div>
    </a>

    <nav class="nav" aria-label="Main">
      <div class="nav-item-dropdown">
        <span>
          <span class="nav-label-main">Cursed Realm</span>
          <span class="nav-chevron">▾</span>
        </span>
        <ul class="nav-dropdown-menu">
          {% for item in nav.cursedRealm %}
            <li class="nav-dropdown-item"><a href="leaderboard.html?mode={{ item.mode }}">{{ item.label }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <div class="nav-item">
        <a href="leaderboard.html?mode={{ nav.nightmareCorridor.mode }}">
          <span class="nav-label-main">{{ nav.nightmareCorridor.label }}</span>
        </a>
      </div>

      <div class="nav-item-dropdown">
        <span>
          <span class="nav-label-main">Treasure Scramble</span>
          <span class="nav-chevron">▾</span>
        </span>
        <ul class="nav-dropdown-menu">
          {% for item in nav.treasureScramble %}
            <li class="nav-dropdown-item"><a href="leaderboard.html?mode={{ item.mode }}">{{ item.label }}</a></li>
          {% endfor %}
        </ul>
      </div>
      <div class="nav-item-dropdown">
        <span>
          <span class="nav-label-main">Comp Finder</span>
          <span class="nav-chevron">▾</span>
        </span>
        <ul class="nav-dropdown-menu">
          {% for item in nav.compFinder %}
            <li class="nav-dropdown-item"><a href="{{ item.href }}">{{ item.label }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </nav>
  </div>
</header>

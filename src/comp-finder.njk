<main class="page" id="compFinderPage">
  <header class="page-header">
    <h1 class="page-title">Comp Finder</h1>
    <p class="page-subtitle">
      Browse best-performing comps aggregated across all players.
    </p>
    <p class="page-status" id="cfLoadStatus"></p>
  </header>

  <section class="filters" aria-label="Comp Finder filters">
    <div class="cf-filter-grid">
      <!-- Row 1: text labels -->
      <div class="cf-filter-head">
        <div class="cf-filter-h">Mode</div>
        <div class="cf-filter-h">Region</div>
        <div class="cf-filter-h">Show</div>
        <div class="cf-filter-h">Legend</div>
      </div>

      <!-- Row 2: actual controls -->
      <div class="cf-filter-body">
        <!-- Mode -->
        <div class="cf-filter-cell">
          <select id="cfMode" class="filters-select">
            <!-- your existing options -->
          </select>
        </div>

        <!-- Regions (your existing multi-select button + menu) -->
        <div class="cf-filter-cell">
          <div class="cf-multi" id="cfRegions">
            <button type="button"
                    id="cfRegionsBtn"
                    class="filters-select cf-multi-btn"
                    aria-haspopup="true"
                    aria-expanded="false">
              <span id="cfRegionsLabel">All regions</span>
              <span class="cf-multi-caret" aria-hidden="true">▾</span>
            </button>

            <div class="cf-multi-menu" id="cfRegionsMenu" role="menu" aria-label="Regions">
              <!-- your existing checkbox items -->
            </div>
          </div>
        </div>

        <!-- Show (put your tabs here) -->
        <div class="cf-filter-cell">
          <div class="cf-tabs" id="cfTabs">
            <button class="cf-tab is-active" data-tab="2-3" type="button">2–3 teams</button>
            <button class="cf-tab" data-tab="4-5" type="button">4–5 teams</button>
            <button class="cf-tab" data-tab="6-7" type="button">6–7 teams</button>
          </div>
        </div>

        <!-- Legend (your density checkboxes/pills) -->
        <div class="cf-filter-cell">
          <div class="cf-density-filters">
            <!-- your existing 3 checkbox pills -->
          </div>
        </div>
      </div>
    </div>
  </section>

  <section aria-label="Teams buckets">
    <div class="cf-tabs" role="tablist" aria-label="Teams buckets">
      <button class="cf-tab is-active" id="cfTab23" role="tab" aria-selected="true" aria-controls="cfPanel23" data-bucket="2-3">2–3 teams</button>
      <button class="cf-tab" id="cfTab45" role="tab" aria-selected="false" aria-controls="cfPanel45" data-bucket="4-5">4–5 teams</button>
      <button class="cf-tab" id="cfTab67" role="tab" aria-selected="false" aria-controls="cfPanel67" data-bucket="6-7">6–7 teams</button>
    </div>

    <div class="cf-panels">
      <div class="cf-panel is-active" id="cfPanel23" role="tabpanel" aria-labelledby="cfTab23" data-bucket="2-3">
        <div class="comps-grid" id="cfGrid23"></div>
      </div>

      <div class="cf-panel" id="cfPanel45" role="tabpanel" aria-labelledby="cfTab45" data-bucket="4-5">
        <div class="comps-grid" id="cfGrid45"></div>
      </div>

      <div class="cf-panel" id="cfPanel67" role="tabpanel" aria-labelledby="cfTab67" data-bucket="6-7">
        <div class="comps-grid" id="cfGrid67"></div>
      </div>
    </div>
  </section>
</main>
